<div class="py-4">
    <h2>Datos del perfil</h2>
    <section class="my-5">
        <h4>Skater: <span id="username"></span></h4>
        <h4>Especialidad: <span id="specialtySk"></span></h4>

    </section>
    <hr class="w-100" />

    <form id="formDatos">
        <div class="form-group row w-50 m-auto">
            <div class="form-group col-12 col-sm-6 my-3">
                <label>Email</label>
                <input class="form-control m-auto" disabled name="email" />
            </div>
            <div class="form-group col-12 col-sm-6 my-3">
                <label>Nombre</label>
                <input class="form-control m-auto" type="text" name="name" />
            </div>
            <div class="form-group col-12 col-sm-6 my-3">
                <label>Password</label>
                <input type="password" class="form-control m-auto" type="password" name="password" />
            </div>
            <div class="form-group col-12 col-sm-6 my-3">
                <label>Repita la password</label>
                <input type="password" class="form-control m-auto" type="password" name="rePassword" />
            </div>
            <div class="form-group col-12 col-sm-6 my-3">
                <label>Años de experiencia</label>
                <input class="form-control m-auto" type="number" name="years_experience" />
            </div>
            <div class="form-group col-12 col-sm-6 my-3">
                <label>Especialidad</label>
                <input class="form-control m-auto" type="text" name="specialty" />
            </div>
        </div>
        <div class="my-3">
            <button class="btn data__btn-update" type="button" id="updateData">Actualizar cuenta</button>
            <button class="btn data__btn-delete" type="button" id="deleteData">Eliminar cuenta</button>
        </div>
        <div>
            <button class="btn data__btn-logout my-3" type="button" id="logout">Cerrar sesión</button>
        </div>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/assets/js/data.js"></script>