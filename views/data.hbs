<h1>Skate Park</h1>

<div class="py-4">
    <h2>Datos del perfil</h2>
    <section class="my-5">

        <h4>Skater: <span id="username"></span></h4>
        <h4>Especialidad: <span id="specialtySk"></span></h4>
        <button class="btn btn-info text-white" type="button" id="logout">Cerrar sesión</button>
    </section>
    <hr class="w-100" />

    <form>
        <div class="form-group row w-50 m-auto">
            <div class="form-group col-12 col-sm-6 my-3">
                <label>Email</label>
                <input class="form-control m-auto" disabled value="tonyhawk@skate.com" />
            </div>
            <div class="form-group col-12 col-sm-6 my-3">
                <label>Nombre</label>
                <input class="form-control m-auto" value="Tony Hawk" />
            </div>
            <div class="form-group col-12 col-sm-6 my-3">
                <label>Password</label>
                <input type="password" class="form-control m-auto" value="12345678" />
            </div>
            <div class="form-group col-12 col-sm-6 my-3">
                <label>Repita la password</label>
                <input type="password" class="form-control m-auto" value="12345678" />
            </div>
            <div class="form-group col-12 col-sm-6 my-3">
                <label>Años de experiencia</label>
                <input class="form-control m-auto" value="12" />
            </div>
            <div class="form-group col-12 col-sm-6 my-3">
                <label>Especialidad</label>
                <input class="form-control m-auto" value="Kickflip" />
            </div>
        </div>
        <div class="my-3">
            <button class="btn data__btn-update">Actualizar</button>
        </div>
        <div>
            <button class="btn data__btn-delete">Eliminar cuenta</button>
        </div>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="./assets/js/data.js"></script>