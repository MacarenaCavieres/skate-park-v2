<section class="py-4">
    <h2>Administrador: <span id="username"></span></h2>
    <div>
        <button class="btn data__btn-logout my-3" type="button" id="logout">Cerrar sesi칩n</button>
    </div>
    <hr class="w-100" />

    {{#if data}}
        <h2>Lista de Skaters</h2>
        <table class="table w-75 admin__table m-auto">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Foto</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">A침os de experiencia</th>
                    <th scope="col">Especialidad</th>
                    <th scope="col">Estado</th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td class="admin__td-img"><img
                                class="admin__img"
                                src="./assets/imgs/{{photo}}"
                                alt="nombre"
                            /></td>
                        <td>{{nombre}}</td>
                        <td>{{years_experience}}</td>
                        <td>{{specialty}}</td>
                        {{#if state}}
                            <td><input type="checkbox" class="check" checked id="{{id}}" /></td>
                        {{else}}
                            <td><input type="checkbox" class="check" id="{{id}}" /></td>
                        {{/if}}

                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{/if}}

    <div class="my-5 pt-3">
        <h4>Registro de administradores</h4>
        <form id="registerAdmin">
            <div class="form-group row w-50 m-auto">
                <div class="form-group col-12 col-sm-6 my-3">
                    <label for="username">Username</label>
                    <input class="form-control m-auto" type="text" name="username" required />
                </div>
                <div class="form-group col-12 col-sm-6 my-3">
                    <label for="email">Email</label>
                    <input class="form-control m-auto" type="email" name="email" required />
                </div>
                <div class="form-group col-12 col-sm-6 my-3">
                    <label for="password">Contrase침a</label>
                    <input class="form-control m-auto" type="password" name="password" required />
                </div>
                <div class="form-group col-12 col-sm-6 my-3">
                    <label for="rept_password">Repita la contrase침a</label>
                    <input class="form-control m-auto" type="password" name="rept_password" required />
                </div>
            </div>
            <button class="btn register__btn mb-3" type="submit">Registrar admin</button>
        </form>
    </div>

    <div>
        <h2>Lista de administradores</h2>
        {{#if dataAdmin}}
            <table class="table w-50 admin__table m-auto">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Username</th>
                        <th scope="col">Email</th>
                        <td scope="col"></td>
                        <td scope="col"></td>

                    </tr>
                </thead>
                <tbody>
                    {{#each dataAdmin}}
                        <tr>
                            <th scope="row">{{id}}</th>
                            <td>{{username}}</td>
                            <td>{{email}}</td>
                            <td><button
                                    class="btn admin__btn-update"
                                    type="button"
                                    data-bs-toggle="tooltip"
                                    data-bs-placement="bottom"
                                    data-bs-title="Actualizar"
                                ><i class="fa-regular fa-pen-to-square"></i></button>
                            </td>
                            <td><button
                                    class="btn admin__btn-delete"
                                    type="button"
                                    data-bs-toggle="tooltip"
                                    data-bs-placement="bottom"
                                    data-bs-title="Eliminar"
                                ><i class="fa-regular fa-trash-can"></i></button></td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        {{/if}}
    </div>

</section>

